[{*.yml,*.yaml,package.json}]
indent_style = space
indent_size = 2

[*.js, *.vue]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.scss, *.css, *.sass]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
